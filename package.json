{
  "name": "basiscash-protocol",
  "version": "0.1.0",
  "description": "A hardhat + thegraph example",
  "repository": "https://github.com/fatter-bo/hardcatstudy",
  "license": "MIT",
  "scripts": {
    "graph:build-contract": "solc contracts/ConfigAddress.sol --abi -o abis --overwrite && solc contracts/ConfigAddress.sol --bin -o bin --overwrite",
    "graph:create": "graph create fatter-bo/hardcatstudy --node https://api.thegraph.com/deploy/",
    "graph:create-local": "graph create fatter-bo/hardcatstudy --node http://127.0.0.1:8020",
    "graph:codegen": "graph codegen",
    "graph:build": "graph build",
    "graph:deploy": "graph deploy fatter-bo/hardcatstudy --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "graph:deploy-local": "graph deploy fatter-bo/hardcatstudy --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "graph:watch-local": "graph deploy fatter-bo/hardcatstudy --watch --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",

    "prettier:solidity": "./node_modules/.bin/prettier contracts/",
    "dev": "hardhat node",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "docker": "docker build -t bc-v2 . && docker run -it --rm bc-v2",
    "deploy:rinkeby": "yarn docker npx hardhat run ./scripts/deploy.ts --network rinkeby",
    "deploy:mainnet": "yarn docker npx hardhat run ./scripts/deploy.ts --network mainnet",
    "deploy:ganache": "yarn docker npx hardhat run ./scripts/deploy.ts --network ganache",
    "prepare": "husky install"
  },
  "lint-staged": {
    "script/*.ts": [
      "tslint --project . --format stylish"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --config src/stylelint.config.json"
    ]
  },
  "devDependencies": {
    "@ethersproject/address": "^5.0.10",
    "@ethersproject/contracts": "^5.0.10",
    "@ethersproject/networks": "^5.0.8",
    "@ethersproject/providers": "^5.0.21",
    "@ethersproject/solidity": "^5.0.9",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.14",
    "@types/ethereumjs-util": "^6.1.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "chai": "^4.3.0",
    "ethereum-waffle": "^3.2.2",
    "ethereumjs-util": "^7.0.8",
    "ethers": "^5.0.29",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.0.8",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "solc": "^0.7.6",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typechain": "^4.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "@uniswap/sdk": "^3.0.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0"
  }
}
